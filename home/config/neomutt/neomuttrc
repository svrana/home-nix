set header_cache = "~/.cache/neomutt/headers/"
set message_cachedir = "~/.cache/neomutt/messages/"
set mailcap_path = "~/.config/neomutt/mailcap.rc"

set pipe_decode  # strip headers and eval mimes when piping

set implicit_autoview = yes

# Allow Mutt to open a new IMAP connection automatically.
unset imap_passive
# Keep the IMAP connection alive by polling intermittently (time in seconds).
set imap_keepalive = 300
# https://www.neomutt.org/guide/reference search sleep_time for additional info
set sleep_time=0 # be faster
set beep=no # no beep sound

set sort=threads
# When sorting by threads, this variable controls how threads are sorted
# in relation to other threads, and how the branches of the thread trees are sorted.
set sort_aux = reverse-last-date-received
set index_format="%4C %Z %{%b %d %R} %-15.15L (%?l?%4l&%4c?) %s"

set sidebar_visible
set sidebar_format="%B%?F? [%F]?%* %?N?%N/?%S"
set mail_check_stats

#alternative_order text/html text/plain
#auto_view text/html text/plain
alternative_order text/plain text/html
auto_view text/plain text/html

## Pager View Options
set pager_index_lines = 25  # Shows N lines of index when pager is active
set pager_context = 3
set pager_stop
set menu_scroll
set tilde
unset markers

source ./colorscheme.rc
source ./bindings.rc

## Account setup
source ./accounts/vranix
# Here we use the $folder variable that has just been set in the sourced file.
# We must set it right now otherwise the 'folder' variable will change in the next sourced file.
folder-hook $folder 'source ~/.config/neomutt/accounts/vranix'

source ./accounts/personal
folder-hook $folder 'source ~/.config/neomutt/accounts/personal'

source ./accounts/work
folder-hook $folder 'source ~/.config/neomutt/accounts/work'

# Account switching
macro index,pager ,v '<sync-mailbox><enter-command>source ~/.config/neomutt/accounts/vranix<enter><change-folder>!<enter>'
macro index,pager ,p '<sync-mailbox><enter-command>source ~/.config/neomutt/accounts/personal<enter><change-folder>!<enter>'
macro index,pager ,w '<sync-mailbox><enter-command>source ~/.config/neomutt/accounts/work<enter><change-folder>!<enter>'
