# vim: filetype=muttrc
#unmailboxes *

set from = "shawvrana@gmail.com"
set realname = "Shaw Vrana"

# Imap settings
set imap_user = "shawvrana@gmail.com"
set imap_pass = "`gopass show gmail.com.imap.passwd`";

# Smtp settings
set smtp_url = "smtps://shawvrana@gmail.com@smtp.gmail.com"
set smtp_pass = "`gopass show gmail.com.imap.passwd`";

# Remote gmail folders
set folder = "imaps://$imap_user@imap.gmail.com"
set spoolfile = "+INBOX"
set postponed = "+[Gmail]/Drafts"
set record = "+[Gmail]/Sent Mail"
set trash = "+[Gmail]/Trash"

set imap_check_subscribed

mailboxes =INBOX =[Gmail]/Sent\ Mail =[Gmail]/Drafts =[Gmail]/Spam =[Gmail]/Trash

account-hook $folder "set imap_user=shawvrana@gmail.com set imap_pass=`gopass show gmail.com.imap.passwd`";
