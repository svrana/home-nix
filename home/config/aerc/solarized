#
# shaw's aerc solarized-dark styleset. Attempt was made to match the solarized-ark neo/mutt theme.
#
#
# This styleset uses the terminal defaults as its base.
#
# More information on how to configure the styleset can be found in
# the aerc-styleset(7) manpage. Please read the manual before
# modifying or creating a styleset.

*.default=true
*.selected.reverse=toggle

title.reverse=true
header.bold=true

*error.bold=true
error.fg=red
warning.fg=yellow
success.fg=green

statusline_default.bg="#073642"
statusline_default.fg="#b58900"
statusline_error.fg=red
statusline_error.reverse=true

msglist_unread.bold=false
#msglist_unread.fg="#2aa198"
msglist_read.fg=#586e75
msglist_deleted.fg=grey

*list.selected.reverse=false
*list.selected.bg="#b58900"
*list.selected.fg="#000000"
*list.selected.bold=true

completion_pill.reverse=true

tab.selected.reverse=false
tab.selected.fg="#b58900"
tab.selected.bg=#073642"
tab.selected.bold=true
tab.bg = "#073642"

# line drawn in between folders and messages
border.fg = "#657b83"

#selector_focused.bg = "#073642"
#selector_focused.reverse=true
#selector_chooser.bold=true
